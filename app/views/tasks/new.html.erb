<div class='justfy-content'>
  <h1>To do 新規作成</h1>
  <br>

  <%= form_with model: @task, local:true do |f| %>
  <div class="field">
    <%= f.label :"To do" %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :メモ %><br>
    <%= f.text_field :body %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Todoを作成する" %>
  </div>
  <% end %>
  <br>
  <%= link_to '一覧に戻る', tasks_path %>
</div>
