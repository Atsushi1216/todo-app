<h1>やること編集</h1>

<%= link_to '一覧へ', tasks_path, class: "btn btn-info" %>

<%= form_with model: @task, local:true do |f| %>
<div class="field">
  <%= f.label :やること %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :詳細 %><br>
  <%= f.text_field :body %>
</div>
<div class="actions">
  <%= f.submit "Todoを編集する" %>
</div>
<% end %>
